{
  "name": "cosmo",
  "version": "0.2.0",
  "main": "./app/main.js",
  "repository": "https://github.com/lzkelley/cosmo",
  "keywords": [],
  "author": "Luke Zoltan Kelley <lkelley@cfa.harvard.edu>",
  "description": "A simple cosmological calculator application using Electron.",
  "scripts": {
    "__postinstall": "npm rebuild zeromq --runtime=electron --target=1.7.2",
    "postinstall": "electron-builder install-app-deps",
    "_start": "npm install && electron ./app",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "cosmo",
    "extraResources": [
      {
        "from": "app/external/pyapi.py",
        "to": "external/pyapi.py"
      },
      {
        "from": "app/external/settings.txt",
        "to": "external/settings.txt"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "electron": "^1.8.1",
    "electron-builder": "^19.52.1",
    "electron-rebuild": "^1.6.0"
  },
  "dependencies": {
    "electron-debug": "^1.5.0",
    "fix-path": "^2.1.0",
    "sprintf-js": "^1.1.1",
    "zerorpc": "^0.9.7",
    "zmq": "^2.15.3"
  }
}
